<p class="bottom-border"></p>
<% @post.comments.each do |comment| %>
    <p class="text-info"><%= comment.user.email %>
      <span class="text-muted">
        <%= "- " + time_ago_in_words(comment.created_at) + " ago" %>
      </span>
    </p>
    <p class="bottom-border"><%= comment.body %></p>
  <% if comment.user === current_user || (current_user && current_user.admin?) %>
    <%= link_to "delete comment", post_comment_path(@post,comment),
      method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this comment?"} %>
      <%= link_to "edit comment", edit_post_comment_path(@post,comment), class: "btn btn-primary btn-sm" %>
  <% end %>
<% end %>
