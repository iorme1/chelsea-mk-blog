<br>
<% if current_user && current_user.admin? %>
  <div class="col-md-4 text-center">
    <%= link_to "Create New Post", new_post_path, class: "btn btn-primary" %>
  </div><br>
<% end %>

  <div class="text-center sticky-top sidey float-md-right col-md-4 col-xs-12">
    <h4 class="media-name">INSTAGRAM</h4>
    <!-- LightWidget WIDGET --><script src="https://cdn.lightwidget.com/widgets/lightwidget.js"></script><iframe src="//lightwidget.com/widgets/944939dc14a1592b80e01e675952c041.html" scrolling="no" allowtransparency="true" class="lightwidget-widget" style="width:100%;border:1px solid black;box-shadow:1px 1px 2px 3px black;overflow:hidden;"></iframe>
    <p class="bottom-border"></p>
    <h4 class="media-name">FACEBOOK</h4>
    <%= link_to image_tag('facebook.jpg', style: "max-width: 100%; height: auto;", class: "facebook"), 'https://www.facebook.com/ChelseaAlvarezMaryKayIndependentBeautyConsultant' %>
    <p class="bottom-border"></p>
  </div>

    <div class="row blog-row">
      <% @posts.each do |post| %>
        <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12">
          <div class="blog bottom-border">
            <% if current_user && current_user.admin? %>
              <%= link_to "delete", post_path(post), method: :delete, class: "btn btn-danger btn-sm",
                data: { confirm: "Are you sure you want to delete this blog post?" } %>
                <%= link_to "edit", edit_post_path(post), class: "btn btn-primary btn-sm" %>
                <p></p><br/>
            <% end %>
            <div class="row">
              <div class="col-md-6 col-lg-6 col-xl-6 image-div">
                <%= image_tag(post.cover.url, class: "cover-image") if post.cover? %>
              </div>
              <div class="col-md-6 col-lg-6 col-xl-6 preview-div">
                <h3 class="prev-title-font font-italic"><%= post.title.upcase %></h3>
                <p class="text-muted font-italic"><%= post.created_at.strftime("%Y-%m-%d") + " By Chelsea Alvarez" %></p>
                <div class="preview-blog-text">
                  <p><%= raw post.body.truncate(200) %></p>
                </div>
                <div class="read-post-btn-div">
                  <%= link_to post_path(post), :class => "btn btn-primary btn-sm btn3d"  do %>
                    Read Post

                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>

      <% end %>
    </div>
