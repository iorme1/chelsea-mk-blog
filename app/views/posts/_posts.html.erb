<% if @posts.blank? %>
  <h4 class="comment-notes">There are no posts containing the term: <%= params[:search] %></h4>
<% end %>
<div class="top-marg main-container container-fluid">
  <div class="text-center sticky-top float-lg-right sidey col-md-8 col-lg-3 col-sm-8 col-xs-12">
    <h4 class="media-name">INSTAGRAM</h4>
    <!-- LightWidget WIDGET --><script src="https://cdn.lightwidget.com/widgets/lightwidget.js"></script><iframe src="//lightwidget.com/widgets/944939dc14a1592b80e01e675952c041.html" scrolling="no" allowtransparency="true" class="lightwidget-widget" style="width:100%;border:1px solid black;box-shadow:1px 1px 2px 3px black;overflow:hidden;"></iframe>
    <p></p><br>
    <h4 class="media-name">FACEBOOK</h4>
    <%= link_to image_tag('facebook.jpg', style: "max-width: 100%; height: auto;", class: "facebook"), 'https://www.facebook.com/ChelseaAlvarezMaryKayIndependentBeautyConsultant' %>
    <p></p><br>
    <h4 class="media-name">PINTEREST</h4>
    <p class="comment-notes">(Coming soon!)</p><br>
  </div>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="row blog">
        <div class="col-lg-5 col-md-5 col-xs-12">
          <div class="image-div">
            <%= image_tag(post.cover.url, class: "cover-image") if post.cover? %>
          </div><br>
          <% if current_user && current_user.admin? %>
            <div class="text-center">
              <%= link_to "delete post", post_path(post), method: :delete, class: "btn btn-sm cool-btn",
                data: { confirm: "Are you sure you want to delete this blog post?" } %>
                <%= link_to "edit post", edit_post_path(post), class: "btn btn-sm cool-btn" %>
            </div><br/>
          <% end %>
        </div>

        <div class="col-lg-6 col-md-6 col-xs-12">
          <div class="preview-div">
            <h1 class="title-font font-italic"><%= post.title.upcase %></h1>
            <p class="text-muted font-italic"><%= post.created_at.strftime("%Y-%m-%d") + " By Chelsea Alvarez" %></p>
            <div class="preview-blog-text">
              <p><%= raw post.body.truncate(250) %></p>
            </div>
            <div class="read-post-btn-div">
              <%= link_to post_path(post), :class => "read-post btn cool-btn"  do %>
                Read Post
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
