<%= form_tag(posts_path, :method => "get", id: "search-form", class: "top-marg") do %>
<div class="search-container text-center">
  <div class="row">
    <div class="col-md-12">
      <%= text_field_tag :search, params[:search], placeholder: "Search Blogs...",  class: "search-blogs" %>
      <%= submit_tag "Search", :name => nil, class: "cool-btn btn", style: "margin: 5px;" %>
    </div>
  </div>
</div>
<% end %>
